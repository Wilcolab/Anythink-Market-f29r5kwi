{
  "name": "js-express-server",
  "version": "1.0.0",
  "description": "A simple Express server project",
  "main": "src/index.js",
  "scripts": {
    "start": "node src/index.js",
    "dev": "nodemon src/index.js",
    "docker:up": "docker compose up --build -d",
    "docker:logs": "docker compose logs -f js-express-server",
    "docker:exec": "docker compose exec js-express-server sh -c 'ps aux; cat /usr/src/app/src/index.js; netstat -tlnp'"
  },
  "dependencies": {
    "express": "^4.17.1"
  },
  "devDependencies": {
    "nodemon": "^2.0.15"
  },
  "author": "",
  "license": "ISC"
}